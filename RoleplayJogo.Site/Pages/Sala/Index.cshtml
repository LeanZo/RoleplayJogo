@page
@model RoleplayJogo.Site.Pages.Sala.IndexModel
@{
    ViewData["Title"] = "Roleplay Jogo - Sala";
}

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="DnD, dangeon and dragons, roleplay, dice, roller, 3D, RPG, wargame" />
    <meta name="description" content="Online 3D dice roller" />

    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/dice.css">

    <link rel="stylesheet" href="/css/home.css">
</head>

<div class="home-container">
    <div id="dice-container">
        <div id="info_div" style="display: none">
            <div class="center_field">
                <span id="label"></span>
            </div>
            <div class="center_field">
                <div class="bottom_field">
                    <span id="labelhelp">click to continue or tap and drag again</span>
                </div>
            </div>
        </div>
        <div id="selector_div" style="display: none">
            <div class="center_field">
                <div id="sethelp">
                    choose your dice set by clicking the dices or by direct input of notation,<br />
                    tap and drag on free space of screen or hit throw button to roll
                </div>
            </div>
            <div class="center_field">
                <input type="text" id="set" value="4d6"><br />
                <button id="clear">clear</button>
                <button style="margin-left: 0.6em" id="throw">throw</button>
            </div>
        </div>
        <div>
            <div id="canvas"></div>
        </div>
    </div>

</div>

@section scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.0/signalr.min.js" integrity="sha512-2kq/RiHEhMKQN7FOPzMjmOxTlnNknhIgG9e1bbh/XzXi8+3TArxtNzg4xfmnRyQNPpLxibguHw3B1abasiscaw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <script src="/lib/three/three.min.js"></script>
    <script src="/lib/cannon/cannon.min.js"></script>

    <script>var DiceHub;</script>

    <script type="text/javascript" src="/lib/teal/teal.js"></script>
    <script type="text/javascript" src="/js/dice/dice.js" asp-append-version="true"></script>
    <script type="text/javascript" src="/js/main/main.js" asp-append-version="true"></script>

    <script type="text/javascript">
        dice_initialize(document.getElementById('dice-container'));
    </script>

    <script src="/js/DiceHub/DiceHub.js" asp-append-version="true"></script>

    @*<script src="/js/sala/sala.js" asp-append-version="true"></script>*@
}